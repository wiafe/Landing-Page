.nav
	background-color $light-gray
	width 100%
	.container
		padding-top 21px
		padding-bottom 51px
		.left
			img
				vertical-align middle
		.right
			vertical-align middle
			.btn
				color #a4b1ba
				border 2px solid #a4b1ba
				font-size 16px
				&:hover
					background-color #a4b1ba
					color $light-gray
					transition all .5s ease-in 50ms
					border-color $light-gray