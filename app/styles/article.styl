.article
	margin-top 79px
	.container
		display flex
		padding-left 150px
		padding-right 150px
		.post-section
			font-weight 100
			.img
				width 241px
				height 321px
				background-color #aab2bd
				margin-right 20px
				margin-top 7px
			.post
				font-size 16px
				margin-right 34px
				p
					margin 0
					line-height 26px
				ul
					padding-left 0
					text-transform uppercase
					font-weight 500
					color #3c4f5c
					margin-top 67px
					li
						margin-left 40px
						font-weight 100
						text-transform capitalize
						margin-top 10px
		.form-section
			form
				background-color #f5f6f8
				padding 40px 49px 56px
				border-radius 3px
				margin-left 20px
				h6
					text-transform uppercase
					color #3c4f5c
					text-align center
					font-size 20px
					margin-top 12px
					
				.form-group
					margin-top 28px
					label
						text-transform uppercase
						font-weight 500
						font-size 12px
						
					input
						border none
						font-size 14px
						outline none
						border-bottom 1px solid $light-gray
						background-color #f5f6f8
						padding-top 5px 
						padding-bottom 3px
						&::-webkit-input-placeholder
							font-weight 100
							font-family "Proxima-Nova"
							font-size 16px
				.check-group
					display flex
					margin-top 28px
					p
						font-size 14px
						line-height 26px
						font-weight 100
					input[type="checkbox"]
						width 50px
						height 50px
				.submit
					background-color #eea074
					text-transform uppercase
					font-weight 500
					color $white
					font-size 20px
					border-radius 3px
					border none
					width 100%
					padding 22px 76px
					margin-top 30px
					&:hover
						background-color #fff
						color #eea074
						transition all .3s ease-in 50ms